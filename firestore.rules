rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default rule: Deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // --- SIMPLIFIED USER DATA RULE START ---
    // This single, recursive rule allows a user to create, read, write, and update
    // their own profile document AND any documents within ANY of its subcollections.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
    // --- SIMPLIFIED USER DATA RULE END ---

    // Collection: exercises (Master Library)
    // Rules: Allow any authenticated user to read, but nobody can write.
    match /exercises/{exercise} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Collection: workout_sessions
    // Rules: Allow users to create, read, update, and delete their own workout logs.
    match /workout_sessions/{workoutId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}