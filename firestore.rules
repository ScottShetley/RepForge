rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default rule: Deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Collection: users
    // Rules: Allow users to create, read, and update their own profile document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;

      // --- NEW RULE FOR USER SETTINGS ---
      // Allow users to read and write documents in their own 'settings' subcollection.
      match /settings/{settingId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Collection: exercises (Master Library)
    // Rules: Allow any authenticated user to read, but nobody can write.
    match /exercises/{exercise} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Collection: workout_sessions
    // Rules: Allow users to create, read, update, and delete their own workout logs.
    match /workout_sessions/{workoutId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // --- NEWLY ADDED RULE FOR LIFT PROGRESSION ---
    // Collection: user_lift_progress
    // Rules: Allow users to manage their own lift progression data.
    match /user_lift_progress/{progressId} {
      allow read, update: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}