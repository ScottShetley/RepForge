rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default rule: Deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Collection: users
    // Rules: Allow users to create, read, and update their own profile document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Collection: exercises (Master Library)
    // Rules: Allow any authenticated user to read, but nobody can write.
    match /exercises/{exercise} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // --- NEWLY ADDED & CORRECTED RULE ---
    // Collection: workouts
    // Rules: Allow users to create, read, update, and delete their own workout logs.
    match /workouts/{workoutId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}